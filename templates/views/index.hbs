<!doctype html>
<html lang="en">
<head>
	{{>headerLinks}}
	<title>WeatherWebsite</title>
</head>
<body>
	{{!-- <!-- --------- navbar --------- --> --}}
	{{>navbar}}
	{{!-- <!-- --------- mainContaint --------- --> --}}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-10 col-12 mx-auto">
				<div class="row">
					{{!-- <!-- ------ left div ------ --> --}}
					<div class="col-md-6 col-12 left-div">
						<p class="weatherPara">Welcome to weather app</p>
						<h1 class="weatherHeading">Get The Latest <span class="weatherWord"> WEATHER</span> Info Of Your City</h1>
						<a href="/weather"><button class="btn checkBtn">check now</button></a>
					</div>
					{{!-- <!-- ------ right div ------ --> --}}
					<div class="col-md-6 col-12 right-div">
						<div id="carouselExampleControls" class="carousel slide" data-ride="carousel"  data-interval="2500">
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img class="d-block " src="images/1.jpg" style="width: 25rem;height: 25rem;"
										alt="First slide">
								</div>
								<div class="carousel-item">
									<img class="d-block " src="images/2.jpg" style="width: 25rem;height: 25rem;"
										alt="Second slide">
								</div>
								<div class="carousel-item">
									<img class="d-block " id="third-carouselImg" src="images/4.png" alt="Third slide"
										style="width:25rem; height:auto; margin-top: 6rem;">
								</div>
							</div>
							<a class="carousel-control-prev " href="#carouselExampleControls" role="button"
								data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleControls" role="button"
								data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{{!-- <!-- ---------- Footer ------------- --> --}}
	{{>footer}}
	{{>jvScript}}
</body>
</html>